     {{ this.selectedItem.title || \"\" }}\n      </o-text>\n      <v-row>\n        <v-col md=\"4\" order-md=\"1\">\n          <v-img\n            :src=\"this.selectedItem.image_url\"\n            :class=\"{ 'pa-0': $vuetify.breakpoint.smAndDown }\"\n            :style=\"{ 'max-height': 'fit-content' }\"\n          />\n        </v-col>\n        <v-col\n          md=\"5\"\n          order-md=\"2\"\n          :class=\"{ 'd-flex align-start': $vuetify.breakpoint.mdAndUp }\"\n        >\n          <v-card flat>\n            <o-text\n              s\n              v-if=\"this.selectedColor\"\n              :class=\"{ 'mx-6': $vuetify.breakpoint.mdAndUp }\"\n              v-html=\"'Color: ' + this.selectedColor\"\n            />\n            <product-slide-view\n              :enable-text=\"enableText\"\n              :cards=\"exchangeVariantColorOptions\"\n              :width=\"72\"\n              :height=\"72\"\n              :on-card-selected=\"onColorSelected\"\n              :default-value=\"exchangeVariantColorOptions[0]\"\n            />\n            <o-text\n              s\n              bold\n              class=\"mb-4\"\n              :class=\"{ 'mx-6 ': $vuetify.breakpoint.mdAndUp }\"\n            >\n              Size\n            </o-text>\n            <size-dropdown\n              :default-value=\"this.defaultSizeValue\"\n              :items=\"exchangeVariantSizeOptions\"\n              :on-change=\"onSizeSelected\"\n            />\n            <div :class=\"{ 'mx-6': $vuetify.breakpoint.mdAndUp }\">\n              <action-button\n                @click.stop=\"onClickMethod\"\n                primary-color\n                :disabled=\"isDisabled\"\n                :loading=\"isLoading\"\n                block\n                large\n              >\n                {{ this.isDisabled ? 'Make a selection to exchange' : 'Exchange for this item' }}\n              </action-button>\n            </div>\n          </v-card>\n        </v-col>\n      </v-row>\n    </div>\n  </o-dialog>\n</template>\n\n<script>\nimport ODialog from '@/components/atoms/ODialog.vue'\nimport { mapGetters } from 'vuex'\nimport {\n  saveSelectedItemToStore,\n  getSizeOptionsForSelectedVariant,\n  handleColorOrSizeOptionSelected,\n  getColorOptionsForPDP,\n  getDefaultValue,\n  isSameVariant\n} from '@/controllers/exchangesController'\nimport { CONSTANTS } from '@/constants'\n\nexport default {\n  name: 'PDPPage',\n  components: {\n    ODialog,\n    ProductSlideView: () =>\n      import('@/components/organism/ProductSlideView.vue'),\n    OText: () => import('@/components/atoms/OText.vue'),\n    SizeDropdown: () => import('@/components/molecules/SizeDropdown.vue'),\n    ActionButton: () => import('@/components/atoms/ActionButton.vue')\n  },\n  props: {\n    visible: Boolean,\n    enableText: Boolean,\n    returnReasonClicked: {\n      type: Function,\n      required: true\n    }\n  },\n  data: () => ({\n    selectedImage: '',\n    isDisabled: true,\n    selectedSize: null,\n    selectedColor: null,\n    RETURN_REASON_ACTION: CONSTANTS.RETURN_REASON_ACTION,\n    ACTION_TYPE: CONSTANTS.ACTION_TYPE,\n    selectedItem: {},\n    exchangeVariantColorOptions: [],\n    exchangeVariantSizeOptions: []\n  }),\n  computed: {\n    ...mapGetters({\n      isLoading: 'exchange/isLoading',\n      currentItemIndex: 'returns/currentItemIndex',\n      selectedItems: 'order/selectedItems',\n      exchangeList: 'order/exchangeList',\n      reason: 'returns/reason',\n      reasons: 'returns/reasons'\n    }),\n    item () {\n      return this.selectedItems[this.currentItemIndex]\n    },\n    show: {\n      get () {\n        return this.visible\n      },\n      set (value) {\n        if (!value) {\n          this.$emit('close')\n        }\n      }\n    },\n    defaultSizeValue () {\n      return getDefaultValue(this.ACTION_TYPE.SIZE, this.selectedColor)\n    }\n  },\n  methods: {\n    onColorSelected (selectedItem) {\n      if (!selectedItem.disabled) {\n        this.selectedColor = selectedItem.color\n        this.handleOptionSelected(selectedItem)\n      }\n    },\n    onSizeSelected (selectedItem) {\n      if (!selectedItem.disabled) {\n        this.selectedSize = selectedItem.size\n        this.handleOptionSelected(selectedItem, this.ACTION_TYPE.SIZE)\n      }\n    },\n    onClickMethod (event) {\n      let optionForSelectedSizeAndColor = this.item?.exchangeVariants.find(\n        (variant) =>\n          variant.size === this.selectedSize &&\n          variant.color === this.selectedColor\n      )\n\n      if (optionForSelectedSizeAndColor) {\n        optionForSelectedSizeAndColor = {\n          ...optionForSelectedSizeAndColor,\n          disabled: false,\n          subtitle: ''\n        }\n        saveSelectedItemToStore(optionForSelectedSizeAndColor)\n        this.returnReasonClicked()\n        this.show = false\n\n        const newReason = this.reasons.find(\n          (r) => r.recommendation_type === this.RETURN_REASON_ACTION.OTHER\n        )\n        if (newReason) {\n          this.$store.commit('returns/updateReason', {\n            reason: newReason,\n            itemSku: optionForSelectedSizeAndColor.sku\n          })\n        }\n\n        this.$emit('click', event)\n      }\n    },\n    updateIsDisabled () {\n      this.isDisabled = !(\n        this.selectedSize &&\n        this.selectedColor &&\n        this.selectedItem &&\n        !isSameVariant(this.selectedItem) &&\n        !this.selectedItem.disabled &&\n        !this.isLoading\n      )\n    },\n    handleOptionSelected (selectedItem, action = this.ACTION_TYPE.COLOR) {\n      const {\n        selectedSize,\n        selectedColor,\n        selectedItem: updatedSelectedItem\n      } = handleColorOrSizeOptionSelected(\n        selectedItem,\n        action,\n        this.item,\n        this.selectedSize,\n        this.selectedColor\n      )\n\n      this.selectedSize = selectedSize\n      this.selectedColor = selectedColor\n      this.selectedItem = updatedSelectedItem\n\n      if (action === this.ACTION_TYPE.COLOR) {\n        const sizes = getSizeOptionsForSelectedVariant(this.selectedColor)\n        this.exchangeVariantSizeOptions = sizes\n        if (!this.selectedSize && sizes.length === 1 && !sizes[0].isDisabled) {\n          this.selectedSize = sizes[0].size\n        } else {\n          this.selectedSize = this.defaultSizeValue.size\n        }\n      }\n\n      this.updateIsDisabled()\n    }\n  },\n  mounted () {\n    this.selectedItem = this.item\n    const colorOptions = getColorOptionsForPDP()\n    this.exchangeVariantColorOptions = colorOptions\n    this.selectedColor = colorOptions[0].color\n\n    this.exchangeVariantSizeOptions = getSizeOptionsForSelectedVariant(\n      this.item?.color\n    )\n    this.selectedSize = this.defaultSizeValue?.size\n    this.handleOptionSelected(this.selectedItem)\n    this.updateIsDisabled()\n  }\n}\n</script>\n\n<style scoped>\n.fullWidth {\n  width: 100%;\n}\n.partialWidth {\n  width: 300px;\n}\n.boldText {\n  font-weight: bold;\n}\n.v-card > div {\n  margin-left: 0 !important;\n}\n</style>\n"]}]}